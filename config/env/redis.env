# ==========================================
# Redis服务配置
# ==========================================
# Redis版本配置
REDIS_VERSION=8.2.3

# Valkey版本（Redis分支）
VALKEY_VERSION=8.1.5

# Redis端口
REDIS_HOST_PORT=63079

# Redis配置文件路径
REDIS_CONF_FILE=./conf/redis.conf

# Redis日志目录
REDIS_LOG_DIR=./logs/redis

# Redis CPU限制
REDIS_LIMITS_CPU=2

# Redis内存限制
REDIS_LIMITS_MEMORY=4G

# Redis内存预留
REDIS_RESERVATIONS_MEMORY=1G

# ==========================================
# 生产环境资源配置
# ==========================================

# 生产环境Redis副本数
REDIS_PROD_REPLICAS=2

# 生产环境Redis CPU限制
REDIS_PROD_LIMITS_CPU=0.5

# 生产环境Redis内存限制
REDIS_PROD_LIMITS_MEMORY=512M

# 生产环境Redis CPU预留
REDIS_PROD_RESERVATIONS_CPU=0.25

# 生产环境Redis内存预留
REDIS_PROD_RESERVATIONS_MEMORY=256M

# ------------------------------- #

# 生产环境Valkey副本数
VALKEY_PROD_REPLICAS=2

# 生产环境Valkey CPU限制
VALKEY_PROD_LIMITS_CPU=0.5

# 生产环境Valkey内存限制
VALKEY_PROD_LIMITS_MEMORY=512M

# 生产环境Valkey CPU预留
VALKEY_PROD_RESERVATIONS_CPU=0.25

# 生产环境Valkey内存预留
VALKEY_PROD_RESERVATIONS_MEMORY=256M

# ==========================================
# 开发环境资源配置
# ==========================================

# 开发环境Redis CPU预留
REDIS_DEV_RESERVATIONS_CPU=0.1

# 开发环境Redis内存预留
REDIS_DEV_RESERVATIONS_MEMORY=128M

# 开发环境Valkey CPU预留
VALKEY_DEV_RESERVATIONS_CPU=0.1

# 开发环境Valkey内存预留
VALKEY_DEV_RESERVATIONS_MEMORY=128M