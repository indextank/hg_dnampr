# ==========================================
# 基础配置 - WSL Docker 网络优化版本
# ==========================================
# 项目环境标识
ENVIRONMENT=development
# 项目版本号
VERSION=1.1.0
# 预留字段
Z=

# 时区配置
TZ=Asia/Shanghai

# 代理检测配置
DISABLE_PROXY_DETECTION=true

# ==========================================
# WSL Docker 网络代理配置
# ==========================================
# WSL 环境中的代理配置
#HTTP_PROXY=http://172.21.128.1:60066
#HTTPS_PROXY=http://172.21.128.1:60066
HTTP_PROXY=
HTTPS_PROXY=

# 代理排除列表
NO_PROXY=localhost,127.0.0.1,172.17.0.0/16,host.docker.internal,172.21.128.1

# ==========================================
# 网络和DNS配置
# ==========================================
# DNS服务器配置
DNS_PRIMARY=8.8.8.8
DNS_SECONDARY=1.1.1.1

# ==========================================
# 源码镜像配置
# ==========================================
# 使用国内镜像源加速
CHANGE_SOURCE=false

# Alpine Linux镜像源
ALPINE_REPOSITORIES=mirrors.ustc.edu.cn

# ==========================================
# 日志配置优化
# ==========================================
# 单个日志文件最大大小
LOG_MAX_SIZE=50m
# 保留的日志文件数量
LOG_MAX_FILE=5

# ==========================================
# ELK 默认安全配置（开发环境）
# ==========================================
# 默认启用安全功能但不启用SSL（开发环境）
# Kibana需要基本的安全API才能正常工作
# 生产环境会通过elk.prod.env覆盖并启用SSL
ELK_SECURITY_ENABLED=true
ELK_TRANSPORT_SSL_ENABLED=false
ELK_HTTP_SSL_ENABLED=false
