# ==========================================
# 路径配置
# ==========================================

# 数据存储目录
# MongoDB数据存储路径
MONGO_DATA_DB_DIR=/data/myDockerData/mongo_data

# MySQL数据存储路径
MYSQL_DATA_DIR=/data/myDockerData/mysql_data

# PostgreSQL数据存储路径
POSTGRES_DATA_DB_DIR=/data/myDockerData/postgres_data

# MySQL备份目录
MYSQL_BACKUP_DIR=/data/myDockerData/mysql_backup

# MySQL备份服务使用的镜像
# 不用修改，仅作备份冗余，防止程序报错。
# 构建时会根据构建的mysql自动选择
MYSQL_BACKUP_IMAGE=hg_dnmpr-mysql:latest

# ==========================================
# MySQL数据库配置
# ==========================================

MYSQL_DATABASE=mysql
MYSQL_USER=dev
MYSQL_PASSWORD=d4ZVWpKfBFZ

MYSQL_ROOT_HOST=%
MYSQL_ROOT_PASSWORD=bxiI2b8ZLYbaAdQBRT

# MySQL版本配置
# MySQL版本
MYSQL_VERSION=8.0.44
# Gosu版本（用于权限管理）
GOSU_VERSION=1.17

# MySQL端口配置
# MySQL标准版本端口
MYSQL_HOST_PORT=30306
# MySQL 8.0版本端口
MYSQL8_HOST_PORT=30307

# MySQL配置文件
# MySQL配置文件路径
MYSQL_CONF_FILE=./conf/mysql/my.cnf
# MySQL日志目录
MYSQL_LOG_DIR=./logs/mysql

# MySQL环境特定配置 - 预设路径，通过启动脚本切换
# 默认使用开发环境配置，通过 switch_mysql_env.sh 脚本切换
MYSQL_ENV_CONFIG_FILE=./conf/mysql/conf.d/mysql-dev.cnf

# MySQL资源限制配置
# MySQL CPU限制
MYSQL_LIMITS_CPU=4
# MySQL内存限制
MYSQL_LIMITS_MEMORY=8G
# MySQL内存预留
MYSQL_RESERVATIONS_MEMORY=4G

