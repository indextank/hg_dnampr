# ==========================================
# Web服务配置 (依赖服务)
# ==========================================
# Nginx稳定版本
NGINX_VERSION=1.28.0

# Tengine版本配置（阿里巴巴开源的Nginx增强版）
TENGINE_VERSION=3.1.0

# Apache HTTP Server版本
APACHE_VERSION=2.4.62
# Apache Portable Runtime版本
APR_VERSION=1.7.6
# Apache Portable Runtime Utility版本
APR_UTIL_VERSION=1.6.3

# Perl Compatible Regular Expressions版本
PCRE_VERSION=8.45

# Headers More Nginx Module版本
HEADERS_MORE_NGINX_MODULE_VERSION=0.38

# ==========================================
# Web服务器端口配置
# ==========================================
# Nginx HTTP端口
NGINX_HTTP_HOST_PORT=80
# Nginx HTTPS端口
NGINX_HTTPS_HOST_PORT=443

# ==========================================
# 日志和配置目录
# ==========================================
# 本地项目根目录 - 根据自己需要修改
# 开发环境：/data/wwwroot 或 ./src
# 生产环境：/var/www/html 或 /app
GLOBAL_WEB_PATH=/data/wwwroot

# Nginx日志目录
NGINX_LOG_DIR=./logs/nginx
# Apache日志目录
APACHE_LOG_DIR=./logs/apache

# Nginx虚拟主机配置目录
NGINX_VHOST_DIR=./vhost/nginx_vhost
# Apache虚拟主机配置目录
APACHE_VHOST_DIR=./vhost/apache_vhost

# Nginx主配置文件
NGINX_CONF_FILE=./conf/nginx/nginx.conf
# Tengine主配置文件
TENGINE_CONF_FILE=./conf/nginx/tengine/nginx.conf

# ==========================================
# 资源限制配置
# ==========================================
# Nginx CPU限制
NGINX_LIMITS_CPU=0.5
# Nginx内存限制
NGINX_LIMITS_MEMORY=256M
# Nginx CPU预留
NGINX_RESERVATIONS_CPU=0.25
# Nginx内存预留
NGINX_RESERVATIONS_MEMORY=128M

# Tengine CPU限制
TENGINE_LIMITS_CPU=0.5
# Tengine内存限制
TENGINE_LIMITS_MEMORY=256M
# Tengine CPU预留
TENGINE_RESERVATIONS_CPU=0.25
# Tengine内存预留
TENGINE_RESERVATIONS_MEMORY=128M

# ==========================================
# 生产环境资源配置
# ==========================================
# 生产环境Nginx副本数
NGINX_PROD_REPLICAS=3
# 生产环境Nginx CPU限制
NGINX_PROD_LIMITS_CPU=1
# 生产环境Nginx内存限制
NGINX_PROD_LIMITS_MEMORY=512M
# 生产环境Nginx CPU预留
NGINX_PROD_RESERVATIONS_CPU=0.5
# 生产环境Nginx内存预留
NGINX_PROD_RESERVATIONS_MEMORY=256M

# 生产环境Tengine副本数
TENGINE_PROD_REPLICAS=3
# 生产环境Tengine CPU限制
TENGINE_PROD_LIMITS_CPU=1
# 生产环境Tengine内存限制
TENGINE_PROD_LIMITS_MEMORY=512M
# 生产环境Tengine CPU预留
TENGINE_PROD_RESERVATIONS_CPU=0.5
# 生产环境Tengine内存预留
TENGINE_PROD_RESERVATIONS_MEMORY=256M

# ==========================================
# 开发环境资源配置
# ==========================================
# 开发环境Nginx CPU预留
NGINX_DEV_RESERVATIONS_CPU=0.1
# 开发环境Nginx内存预留
NGINX_DEV_RESERVATIONS_MEMORY=64M

# 开发环境Tengine CPU预留
TENGINE_DEV_RESERVATIONS_CPU=0.1
# 开发环境Tengine内存预留
TENGINE_DEV_RESERVATIONS_MEMORY=64M
