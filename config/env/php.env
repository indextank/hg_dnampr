XDEBUG_EXT_VERSION=3.3.2
# Swoole扩展版本（php>8.0）
SWOOLE_EXT_VERSION=6.1.1
SWOOLE60_EXT_VERSION=6.0.2
# Swoole 7.x扩展版本
SWOOLE7_EXT_VERSION=5.1.3
# gRPC扩展版本
GRPC_EXT_VERSION=1.76.0
# Redis扩展版本
REDIS_EXT_VERSION=6.3.0
# MongoDB扩展版本（自动版本选择）
MONGODB_EXT_VERSION=2.1.4
# Imagick扩展版本
IMAGICK_EXT_VERSION=3.8.0
# YAML扩展版本
YAML_EXT_VERSION=2.2.5
# RdKafka扩展版本
RDKAFKA_EXT_VERSION=6.0.5
# ZooKeeper扩展版本
ZOOKEEPER_EXT_VERSION=1.2.2
# Protobuf扩展版本
PROTOBUF_EXT_VERSION=4.33.0
# Memcached扩展版本
MEMCACHED_VERSION=3.4.0

# ==========================================
# 系统库版本配置
# ==========================================
# OpenSSL LTS版本，支持到2030年4月8日
OPENSSL_VERSION=3.5.1
# OpenSSL 1.1.1版本（兼容旧版本）
OPENSSL_VERSION_11=1.1.1w

# cURL最新稳定版本
CURL_VERSION=8.17.0

# FreeType字体渲染库版本 
# https://download.savannah.gnu.org/releases/freetype/
FREETYPE_VERSION=2.14.1

# WebP图像格式支持库版本 
# https://github.com/webmproject/libwebp/tags
LIBWEBP_VERSION=1.5.0

# 字符编码转换库版本
# https://ftp.gnu.org/pub/gnu/libiconv/
LIBICONV_VERSION=1.18

# Sodium加密库版本
# https://github.com/jedisct1/libsodium/releases/
LIBSODIUM_VERSION=1.0.20

# ImageMagick图像处理库版本
IMAGICK_VERSION=7.1.1-47

# RdKafka消息队列库版本
LIBRDKAFKA_VERSION=2.10.0

# ZooKeeper分布式协调服务版本
ZOOKEEPER_VERSION=3.5.10

# Protocol Buffers序列化库版本
PROTOBUF_VERSION=21.12

# ==========================================
# PHP性能配置优化
# ==========================================
# PHP内存限制
# 开发环境：1024M（足够开发使用）
# 生产环境：2048M（根据应用需求调整）
PHP_MEMORY_LIMIT=1024M

# PHP最大执行时间（秒）
# 开发环境：300（较长，便于调试）
# 生产环境：60（较短，避免长时间阻塞）
PHP_MAX_EXECUTION_TIME=300

# 最大上传文件大小
PHP_UPLOAD_MAX_FILESIZE=128M
# POST数据最大大小
PHP_POST_MAX_SIZE=128M

# 最大输入变量数量
PHP_MAX_INPUT_VARS=5000

# ==========================================
# 资源限制配置 (Docker)
# ==========================================
# PHP容器CPU限制
PHP_LIMITS_CPU=4
# PHP容器内存限制
PHP_LIMITS_MEMORY=2G
# PHP容器CPU预留
PHP_RESERVATIONS_CPU=1
# PHP容器内存预留
PHP_RESERVATIONS_MEMORY=1G

# 开发环境CPU限制
PHP_DEV_LIMITS_CPU=2
# 开发环境内存限制
PHP_DEV_LIMITS_MEMORY=1G
# 开发环境CPU预留
PHP_DEV_RESERVATIONS_CPU=0.5
# 开发环境内存预留
PHP_DEV_RESERVATIONS_MEMORY=512M

# 生产环境CPU限制
PHP_PROD_LIMITS_CPU=8
# 生产环境内存限制
PHP_PROD_LIMITS_MEMORY=4G
# 生产环境CPU预留
PHP_PROD_RESERVATIONS_CPU=2
# 生产环境内存预留
PHP_PROD_RESERVATIONS_MEMORY=2G

# 生产环境PHP容器副本数
PHP_PROD_REPLICAS=3

# ==========================================
# PHP服务端口配置
# ==========================================
# 各PHP版本的端口配置（避免端口冲突）
# PHP 8.4 端口
PHP84_PORT=8084
# PHP 8.3 端口
PHP83_PORT=8083
# PHP 8.2 端口
PHP82_PORT=8082
# PHP 8.1 端口
PHP81_PORT=8081
# PHP 8.0 端口
PHP80_PORT=8080
# PHP 7.4 端口
PHP74_PORT=8074
# PHP 7.2 端口
PHP72_PORT=8072

# ==========================================
# PHP服务器名称配置
# ==========================================
# 虚拟主机配置，用于Apache/Nginx
PHP84_SERVER_NAME=php84.default.com       # PHP 8.4 服务器名称
PHP83_SERVER_NAME=php83.default.com       # PHP 8.3 服务器名称
PHP82_SERVER_NAME=php82.default.com       # PHP 8.2 服务器名称
PHP81_SERVER_NAME=php81.default.com       # PHP 8.1 服务器名称
PHP80_SERVER_NAME=php80.default.com       # PHP 8.0 服务器名称
PHP74_SERVER_NAME=php74.default.com       # PHP 7.4 服务器名称
PHP72_SERVER_NAME=php72.default.com       # PHP 7.2 服务器名称

# ==========================================
# PHP配置文件路径
# ==========================================
# 各PHP版本的配置文件路径
PHP84_PHP_CONF_FILE=./conf/php/php84/php.ini    # PHP 8.4 配置文件
PHP83_PHP_CONF_FILE=./conf/php/php83/php.ini    # PHP 8.3 配置文件
PHP82_PHP_CONF_FILE=./conf/php/php82/php.ini    # PHP 8.2 配置文件
PHP81_PHP_CONF_FILE=./conf/php/php81/php.ini    # PHP 8.1 配置文件
PHP80_PHP_CONF_FILE=./conf/php/php80/php.ini    # PHP 8.0 配置文件
PHP74_PHP_CONF_FILE=./conf/php/php74/php.ini    # PHP 7.4 配置文件
PHP72_PHP_CONF_FILE=./conf/php/php72/php.ini    # PHP 7.2 配置文件